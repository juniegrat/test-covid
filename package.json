{
  "name": "covid",
  "description": "Plateforme web médecin/patient pour résultats COVID-19",
  "version": "9.0.0",
  "private": true,
  "author": "Junie Grat",
  "devDependencies": {
    "cross-env": "^7.0.2",
    "eslint": "^7.32.0",
    "eslint-plugin-react": "^7.24.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2"
  },
  "workspaces": [
    "packages/landing"
  ],
  "scripts": {
    "clean": "yarn workspaces run rimraf \"{.next,node_modules,.cache,out,dist}\" && rimraf node_modules",
    "next-dev": "yarn workspace @covid/next run dev",
    "next-build": "yarn workspace @covid/next run build",
    "next-start": "yarn workspace @covid/next run start",
    "next-export": "yarn workspace @covid/next run export"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,md,css}": [
      "prettier --trailing-comma es5 --single-quote --write"
    ]
  }
}
